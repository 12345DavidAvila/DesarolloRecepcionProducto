<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesarolloRecepcionProducto.Vistas.BuscarProductoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Lista de Usuarios" FontSize="20" HorizontalTextAlignment="Center"/>
            <Label x:Name="texto" Text=""/>
            <Button x:Name="btnGet" VerticalOptions="Center" Text="Consultar" Clicked="btnGet_Clicked" BackgroundColor="Blue" TextColor="White"/>
            <ListView x:Name="Listas" >
            <ListView.SelectedItem>
            <DataTemplate>
            <ViewCell>
            <StackLayout>
            <Label x:Name="lblCedula" Text="{Binding cedula}"   FontSize="15" TextColor="Black"/>
            <Label x:Name="lblNombre" Text="{Binding nombre}"  FontSize="15" TextColor="Black"/>
            <Label x:Name="lblUsuario" Text="{Binding telefono}"  FontSize="15" TextColor="Black"/>
            </StackLayout>
            </ViewCell>
            </DataTemplate>
            </ListView.SelectedItem>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>